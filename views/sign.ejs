<%- include('parts/header') %> <% var error %>

<section>
  <div
    class="
      container
      d-flex
      flex-column
      vh-100
      justify-content-center
      align-items-center
    "
  >
    <h1>Sign up</h1>
    <form method="POST" action="/signup" class="mt-4">
      <% if(error) {%>
      <div class="alert my-2 alert-danger"><%= error%></div>
      <% } %>
      <input
        type="email"
        name="email"
        class="form-control form-control-lg"
        placeholder="Email"
        required
      />

      <input
        type="password"
        name="password"
        class="form-control form-control-lg mt-2"
        placeholder="Password"
        required
      />

      <button class="btn btn-primary btn-lg w-100 mt-2">Sign up</button>

      <a href="/" class="btn btn-lg btn-outline-success mt-2 w-100"
        >Login</a
      >
    </form>
  </div>
</section>